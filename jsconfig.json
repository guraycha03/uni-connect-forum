
//jsconfig.json


// jsconfig.json
{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // This tells the compiler that non-relative modules are rooted here
    "paths": {
      "@/*": ["./*"],          // Maps @/* to the root of your project
      "@/lib/*": ["./lib/*"]   // Maps @/lib/* to the lib folder at the root
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js", // Add this if you have .js files you want included
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}